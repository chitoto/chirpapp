<%= form_with(model: @chirp, local: true) do |form| %>
  <div class="chirp_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="chirp_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to '一覧画面に戻る', '/chirps' %>
